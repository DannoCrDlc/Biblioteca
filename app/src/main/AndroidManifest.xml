<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gdcdc.biblioteca">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/magic_circule"
        android:label="@string/app_name"
        android:roundIcon="@drawable/magic_circule"
        android:supportsRtl="true"
        android:theme="@style/Theme.Duelistas">
        <activity
            android:name="com.gdcdc.biblioteca.DataBookActivity"
            android:exported="false" >
        </activity>
        <activity
            android:name="com.gdcdc.biblioteca.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gdcdc.biblioteca.BooksActivity"
            android:exported="true" />
    </application>

</manifest>